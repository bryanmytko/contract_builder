<script type="text/javascript">
$(function(){
$('#wysiwyg').wysiwyg({
    controls: {
        strikeThrough: { visible: true },
        underline: { visible: true },
        subscript: { visible: true },
        superscript: { visible: true },
    },
 		css: '/js/jswysiwyg/jquery.wysiwyg.css'

});
});
</script>
