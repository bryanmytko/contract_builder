<%= render 'build/professional/cms_revert' %>	 
<% @cms.each do |k,v| %>
<div id="<%= k %>" class="cms_selection<%= cms_class(k) %>">
	<div id="pro_build_ecomm">                   
		  <div id="ecomm_magento_records" class="ecomm_container" style="display: block; ">
		  <% featuresArray.each do |f| %>
				<h3><%= f %></h3>
				<table cellpadding="0" cellspacing="0">
						<tbody>
							<tr>
							    <th class="title">Feature</th><th>Select</th><th>Hours</th><th>Cost</th><th>Modify</th>
							</tr>
							<% v.each do |m| %>
								<% if f == m.feature_type %>
								<tr>
									<input type="hidden" value="<%= apply_mods('cms','description', m.name, m.id.to_s) %>" class="description" />
									<input value="<%= m.id.to_s %>" type="hidden" class="template_id template_page_id">
									<input value="<%= m.feature_type %>" type="hidden" class="feature_type">
									<input value="<%= m.cms_type %>" type="hidden" class="cms_type" />
										
									<input value="<%= get_page_modification(m.id.to_s,@build.id) %>" type="hidden" class="get_modification_id" />
									<td><p class="name_text"><%= apply_mods('cms','name', m.name, m.id.to_s) %></p></td>
									<td><input type="checkbox" name="f_cms_<%= m.name %>" <%= is_checked(m.name) %>></td>
									<td><span class="hours_text cms_hours_text"><%= apply_mods('cms','hours', m.hours, m.id.to_s) %></span></td>
									<td><span class="cms_price_text"><%= apply_mods('cms','cost', m.cost, m.id.to_s) %></span></td>
									<td><%= link_to '','', :class => 'modification_button basic_cms', :id => 'modify_' + m.id.to_s %></td>
								</tr>
								<% end %>
							<% end %>
						</tbody>
					</table>
			<% end %>
			</div>
	</div>
</div>
<% end %>