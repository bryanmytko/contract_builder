<h2>Design Pages<h2>

<%= flash_helper %>

<%= form_for @template do |t| %>

<%= t.label(:name, "Design Name: ") %>
<%= t.text_field :name %>
<br />
<%= t.label(:hours, "Hours: ") %>
<%= t.text_field :hours %>
<br />
<%= t.hidden_field(:page_type, :value => 'design') %>

<%= submit_tag('save',:id=>'save') %>

<% end %>
