$('.update_button').bind('ajax:success', function(data) {

	$(this).closest('form').fadeOut().fadeIn();
	
	var id = $(this).parent().parent().find('input.template_id').val();
	var hours = $(this).parent().parent().find('#professional_template_hours').val();
	var n = $(this).parent().parent().find('#professional_template_name').val();
	
	$.ajax({
		url: "professional_template/" + id,
		type: 'put',
		data: '&professional_template[hours]=' + hours + '&professional_template[name]=' + n
	});
	
});
