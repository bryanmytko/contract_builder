<h1>Create Account</h1>
<%= form_for @user do |u| %>
    <% if @user.errors.any? %>
    <div class="error_message">
        <h2>Invalid</h2>
        <ul>
            <% for message in @user.errors.full_messages %>
                <li><%= message %>
            <% end %>
        </ul>
    </div>
    <% end %>
    <p>
        <%= u.label :email %><br />
        <%= u.text_field :email %>
    </p>
    <p>
        <%= u.label :password %><br />
        <%= u.password_field :password %>
    </p> 
    <p class="button"><%= u.submit %></p>
<% end %>
